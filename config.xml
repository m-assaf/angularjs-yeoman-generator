<?xml version="1.0" encoding="UTF-8"?>
<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "com.phonegap.healthcare-portal"
        version = "0.0.1">

    <name>Healthcare Portal</name>

    <description>
        Fluance IT Healthcare Portal
    </description>

    <author email="dev@fluance.net" href="http://www.fluance.ch">
        Fluance IT developers
    </author>

    <preference name="permissions" value="none"/>

    <!-- General preferences-->
    <preference name="phonegap-version" value="3.5.0" />
    <preference name="orientation" value="default" />
    <preference name="fullscreen" value="true" />

    <!-- Status bar - iOS Only -->
    <gap:plugin name="com.phonegap.plugin.statusbar" />

    <gap:config-file platform="ios" parent="UIStatusBarHidden">
        <false/>
    </gap:config-file>

    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
        <false/>
    </gap:config-file>

    <!-- Default icon -->
    <!--<icon src="icon.png" />-->

    <!-- iOS 7.0+ Icons -->
    <!-- iPhone & iPod Touch (Non-Retina) -->
    <icon src="healthcare-portal/app/res/icon/ios/icon-60.png" gap:platform="ios" width="60" height="60" />
    <!-- iPhone & iPod Touch (Retina) -->
    <icon src="healthcare-portal/app/res/icon/ios/icon-60@2x.png" gap:platform="ios" width="120" height="120" />
    <!-- iPad 2 & iPad mini (Non-Retina) -->
    <icon src="healthcare-portal/app/res/icon/ios/icon-76.png" gap:platform="ios" width="76" height="76" />
    <!-- iPad & iPad mini (Retina) -->
    <icon src="healthcare-portal/app/res/icon/ios/icon-76@2x.png" gap:platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="healthcare-portal/app/res/icon/ios/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="healthcare-portal/app/res/icon/ios/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="healthcare-portal/app/res/icon/ios/icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="healthcare-portal/app/res/icon/ios/icon-40@2x.png" gap:platform="ios" width="80" height="80" />

    <!-- iOS 6.1 Icons -->
    <!-- iPhone / iPod Touch -->
    <icon src="healthcare-portal/app/res/icon/ios/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="healthcare-portal/app/res/icon/ios/icon@2x.png" gap:platform="ios" width="114" height="114" />

    <!-- iPad -->
    <icon src="healthcare-portal/app/res/icon/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="healthcare-portal/app/res/icon/ios/icon-72@2x.png" gap:platform="ios" width="144" height="144" />

    <!-- Settings Icon -->
    <icon src="healthcare-portal/app/res/icon/ios/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="healthcare-portal/app/res/icon/ios/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- iPad Spotlight and Settings Icon -->
    <icon src="healthcare-portal/app/res/icon/ios/icon-50.png" gap:platform="ios" width="50" height="50" />
    <icon src="healthcare-portal/app/res/icon/ios/icon-50@2x.png" gap:platform="ios" width="100" height="100" />

    <!-- Android Icons -->
    <icon src="healthcare-portal/app/res/icon/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="healthcare-portal/app/res/icon/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="healthcare-portal/app/res/icon/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="healthcare-portal/app/res/icon/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="healthcare-portal/app/res/icon/android/xxhdpi.png" gap:platform="android" gap:density="xxhdpi" />
    <icon src="healthcare-portal/app/res/icon/android/xxxhdpi.png" gap:platform="android" gap:density="xxxhdpi" />

    <!-- Windows Phone Icons -->
    <!--<icon src="healthcare-portal/app/res/icon/winphone/57.png" gap:platform="winphone" />
    <icon src="healthcare-portal/app/res/icon/winphone/48.png" gap:platform="winphone" />
    <icon src="healthcare-portal/app/res/icon/winphone/62.png" gap:platform="winphone" />
    <icon src="healthcare-portal/app/res/icon/winphone/72.png" gap:platform="winphone" gap:role="background" />
    <icon src="healthcare-portal/app/res/icon/winphone/173.png" gap:platform="winphone" gap:role="background" />-->

    <!-- BlackBerry Icons -->
    <!--<icon src="healthcare-portal/app/res/icon/blackberry/80.png" gap:platform="blackberry" />
    <icon src="healthcare-portal/app/res/icon/blackberry/80-hover.png" gap:platform="blackberry" gap:state="hover"/>-->

    <!-- iOS Splash Screens -->
    <!-- iPhone and iPod touch -->
    <gap:splash src="healthcare-portal/app/res/splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="healthcare-portal/app/res/splash/ios/Default@2x.png" gap:platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="healthcare-portal/app/res/splash/ios/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

    <!-- iPad -->
    <gap:splash src="healthcare-portal/app/res/splash/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="healthcare-portal/app/res/splash/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="768" />

    <!-- Retina iPad -->
    <gap:splash src="healthcare-portal/app/res/splash/ios/Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" />
    <gap:splash src="healthcare-portal/app/res/splash/ios/Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536" />

    <!-- Android Splash Screens -->
    <gap:splash src="healthcare-portal/app/res/splash/android/portrait-ldpi.png" gap:platform="android" gap:qualifier="port-ldpi" />
    <gap:splash src="healthcare-portal/app/res/splash/android/landscape-ldpi.png" gap:platform="android" gap:qualifier="land-ldpi" />

    <gap:splash src="healthcare-portal/app/res/splash/android/portrait-mdpi.png" gap:platform="android" gap:qualifier="port-mdpi" />
    <gap:splash src="healthcare-portal/app/res/splash/android/landscape-mdpi.png" gap:platform="android" gap:qualifier="land-mdpi" />

    <gap:splash src="healthcare-portal/app/res/splash/android/portrait-hdpi.png" gap:platform="android" gap:qualifier="port-hdpi" />
    <gap:splash src="healthcare-portal/app/res/splash/android/landscape-hdpi.png" gap:platform="android" gap:qualifier="land-hdpi" />

    <gap:splash src="healthcare-portal/app/res/splash/android/portrait-xhdpi.png" gap:platform="android" gap:qualifier="port-xhdpi" />
    <gap:splash src="healthcare-portal/app/res/splash/android/landscape-xhdpi.png" gap:platform="android" gap:qualifier="land-xhdpi" />

    <gap:splash src="healthcare-portal/app/res/splash/android/portrait-xxhdpi.png" gap:platform="android" gap:qualifier="port-xxhdpi" />
    <gap:splash src="healthcare-portal/app/res/splash/android/landscape-xxhdpi.png" gap:platform="android" gap:qualifier="land-xxhdpi" />

    <!-- Windows Phone Splash Screens -->
    <!--<gap:splash src="splash/winphone/splash.jpg" gap:platform="winphone" />-->

    <content src="index.html" />

    <access origin="*" />

    <gap:platform name="ios" />
    <gap:platform name="android" />
    <!--<gap:platform name="winphone" />-->
    <!--<gap:platform name="blackberry" />-->
</widget>
